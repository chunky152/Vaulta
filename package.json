{
  "name": "unbur",
  "version": "1.0.0",
  "description": "Location-based storage service platform - Find, book, and manage temporary storage units near you",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "dev": "npm run dev --workspace=@unbur/backend & npm run dev --workspace=@unbur/web",
    "dev:backend": "npm run dev --workspace=@unbur/backend",
    "dev:web": "npm run dev --workspace=@unbur/web",
    "build": "npm run build --workspaces",
    "build:backend": "npm run build --workspace=@unbur/backend",
    "build:web": "npm run build --workspace=@unbur/web",
    "start": "npm run start --workspace=@unbur/backend",
    "test": "npm run test --workspaces --if-present",
    "lint": "npm run lint --workspaces --if-present",
    "db:seed": "npm run db:seed --workspace=@unbur/backend",
    "clean": "rm -rf node_modules packages/*/node_modules packages/*/dist"
  },
  "keywords": [
    "storage",
    "booking",
    "geolocation",
    "locker",
    "vault"
  ],
  "author": "Unbur Team",
  "license": "MIT",
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=10.0.0"
  }
}